{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "properties": {
    "type": {
      "const": "ship"
    },
    "location": {
      "$ref": "#/definitions/VectorLocal"
    },
    "mass": {
      "type": "number",
      "minimum": 0
    },
    "name": {
      "type": "string"
    },
    "crew": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/CrewMember"
      }
    }
  },
  "required": ["type", "location", "mass", "name", "crew"],
  "additionalProperties": false,
  "definitions": {
    "VectorLocal": {
      "type": "array",
      "items": [
        {
          "type": "number"
        },
        {
          "type": "number"
        },
        {
          "type": "number"
        }
      ],
      "additionalItems": false
    },
    "CrewMember": {
      "type": "object",
      "properties": {
        "name": {
          "type": "string"
        },
        "age": {
          "type": "number",
          "minimum": 0
        },
        "rank": {
          "$ref": "#/definitions/Rank"
        },
        "home": {
          "$ref": "#/definitions/Planet"
        }
      },
      "required": ["name", "age", "rank", "home"],
      "additionalProperties": false
    },
    "Rank": {
      "enum": ["captain", "first mate", "officer", "ensign"]
    },
    "Planet": {
      "type": "object",
      "properties": {
        "type": {
          "const": "planet"
        },
        "location": {
          "$ref": "#/definitions/VectorLocal"
        },
        "mass": {
          "type": "number",
          "minimum": 0
        },
        "population": {
          "type": "number",
          "minimum": 0
        },
        "habitable": {
          "type": "boolean"
        }
      },
      "required": ["type", "location", "mass", "population", "habitable"],
      "additionalProperties": false
    }
  }
}
