{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "oneOf": [
    {
      "$ref": "#/definitions/Square"
    },
    {
      "$ref": "#/definitions/Rectangle"
    },
    {
      "$ref": "#/definitions/Circle"
    }
  ],
  "definitions": {
    "Square": {
      "type": "object",
      "properties": {
        "size": {
          "type": "number"
        }
      },
      "required": ["size"],
      "additionalProperties": false
    },
    "Rectangle": {
      "type": "object",
      "properties": {
        "width": {
          "type": "number"
        },
        "height": {
          "type": "number"
        }
      },
      "required": ["width", "height"],
      "additionalProperties": false
    },
    "Circle": {
      "type": "object",
      "properties": {
        "radius": {
          "type": "number"
        }
      },
      "required": ["radius"],
      "additionalProperties": false
    }
  }
}
